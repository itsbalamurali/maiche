<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/user_coupons_dialog_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_coupon_exchange_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_hc_exchange_coupon_back"

            android:padding="@dimen/margin_25dp"
            />

        <TextView
            style="@style/HCTheme.TextMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hc_transfer_coupon_input"
            android:textSize="@dimen/hc_text_size_large"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_user_coupon_exchange_no"
        style="@style/HCTheme.VehicleSubBlock.Input"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"/>

    <Button
        android:id="@+id/btn_user_coupon_exchange_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#0000"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingTop="@dimen/margin_15dp"
        android:text="@string/hc_transfer_coupon_search"
        android:textColor="@color/hc_indicator"
        android:textSize="@dimen/hc_text_size_middle"/>

</LinearLayout>