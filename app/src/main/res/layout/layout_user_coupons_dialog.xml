<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_coupons_dialog_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/HCTheme.TextMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hc_transfer_coupon_choice"
            android:layout_margin="@dimen/margin_25dp"
            android:textSize="@dimen/hc_text_size_large"/>

        <TextView
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_coupon_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_5dp"
            android:drawableRight="@drawable/ic_hc_coupon_input"
            android:text="@string/hc_transfer_coupon_input"
            android:padding="@dimen/margin_25dp"
            android:textColor="@color/hc_indicator"
            android:textSize="@dimen/hc_text_size_normal"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_coupons"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_25dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginBottom="@dimen/margin_25dp"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>