<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/wh_mw"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:background="@color/hc_self_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hc_self_gray_line"
        />

    <LinearLayout
        style="@style/wh_mw"
        android:layout_gravity="center_horizontal"
        android:background="@color/hc_self_white"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_transfer_fee"
            style="@style/hc_transfer_bottom_1"
            android:layout_height="@dimen/margin_50dp"
            android:background="@drawable/color_white_turn_gray"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_transfer_fee"
                style="@style/hc_transfer_tv_2"
                android:background="#0000"
                android:padding="@dimen/margin_15dp"
                android:text="@string/hc_transfer_fee"
                android:textColor="@color/hc_self_red"
                android:textSize="@dimen/hc_text_size_middle"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transfer_seller"
            style="@style/hc_transfer_bottom_1"
            android:layout_height="@dimen/margin_50dp"
            android:background="@color/GREEN"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_transfer_seller"
                style="@style/hc_transfer_tv_2"
                android:background="@color/GREEN"
                android:padding="@dimen/margin_15dp"
                android:text="@string/hc_transfer_seller"
                android:textColor="@color/self_white"
                android:textSize="@dimen/hc_text_size_middle"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transfer_detail_modify"
            style="@style/hc_transfer_bottom_1"
            android:layout_height="@dimen/margin_50dp"
            android:background="@drawable/color_white_turn_gray"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_transfer_detail_modify"
                style="@style/hc_transfer_tv_2"
                android:background="#0000"
                android:padding="@dimen/margin_15dp"
                android:text="@string/hc_transfer_detail_modify"
                android:textColor="@color/hc_self_red"
                android:textSize="@dimen/hc_text_size_middle"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transfer_detail_start"
            style="@style/hc_transfer_bottom_1"
            android:layout_height="@dimen/margin_50dp"
            android:background="@drawable/color_red_turn_deep"
            android:visibility="gone">

            <TextView
                style="@style/hc_transfer_tv_2"
                android:background="#0000"
                android:padding="@dimen/margin_15dp"
                android:text="@string/hc_transfer_detail_start"
                android:textColor="@color/hc_self_white"
                android:textSize="@dimen/hc_text_size_middle"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transfer_detail_payment"
            style="@style/hc_transfer_bottom_1"
            android:layout_height="@dimen/margin_50dp"
            android:background="@drawable/color_red_turn_deep"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                style="@style/hc_transfer_tv_2"
                android:background="#0000"
                android:padding="@dimen/margin_15dp"
                android:text="@string/hc_transfer_detail_payment"
                android:textColor="@color/hc_self_white"
                android:textSize="@dimen/hc_text_size_middle"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
