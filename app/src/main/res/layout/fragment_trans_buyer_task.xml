<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        style="@style/wh_mw"
        android:layout_height="@dimen/height_1dp"
        android:background="@color/hc_self_gray_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_trans_task_filter_sort"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_40dp"
            android:layout_weight="1"
            android:background="@drawable/color_white_turn_gray"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp">

            <TextView
                android:id="@+id/tv_trans_task_filter_sort"
                style="@style/wh_match"
                android:gravity="left|center_vertical"
                android:text="@string/hc_trans_task_filter_sort_hint"
                android:textColor="@color/hc_self_gray"
                android:textColorHint="@color/hc_self_gray"/>

            <ImageView
                style="@style/wh_wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_hc_spinner_arrow"/>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/hc_self_gray_line"/>

        <RelativeLayout
            android:id="@+id/rl_trans_task_filter"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_40dp"
            android:layout_weight="1"
            android:background="@drawable/color_white_turn_gray"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp">

            <TextView
                android:id="@+id/tv_trans_task_filter"
                style="@style/wh_match"
                android:gravity="left|center_vertical"
                android:text="@string/hc_trans_task_filter_hint"
                android:textColor="@color/hc_self_gray"
                android:textColorHint="@color/hc_self_gray"/>

            <ImageView
                style="@style/wh_wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_hc_spinner_arrow"/>
        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/hc_self_gray_bg"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.haoche51.sales.custom.HCPullToRefresh
            android:id="@+id/pull_to_refresh"
            style="@style/wh_match"/>

        <ImageButton
            android:id="@+id/floatingactionbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:background="@drawable/ic_add_recommend"
            />
    </FrameLayout>
</LinearLayout>