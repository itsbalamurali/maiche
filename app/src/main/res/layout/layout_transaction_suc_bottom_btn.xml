<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/wh_mw"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_gravity="center_horizontal"
              android:background="@color/hc_self_white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/hc_self_gray"/>

    <LinearLayout
        style="@style/wh_mw"
        android:layout_gravity="center_horizontal"
        android:background="@color/hc_self_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_transaction_dropbuy"
            style="@style/hc_transfer_bottom_1"

            android:background="@color/self_white"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/margin_15dp"
            android:text="@string/hc_breakup"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/btn_transaction_fail"
            style="@style/hc_transfer_bottom_1"
            android:layout_weight="2"
            android:background="@color/self_white"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                style="@style/hc_transfer_tv_2"
                android:background="@color/self_white"
                android:drawableLeft="@drawable/ic_transaction_fail"
                android:padding="@dimen/margin_15dp"
                android:text="@string/hc_transaction_fail"
                android:textColor="@color/hc_self_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_transaction_prepay_commit"
            style="@style/hc_transfer_bottom_2"
            android:background="@color/hc_self_red"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_transfer_commit"
                style="@style/hc_transfer_tv_2"
                android:drawableLeft="@drawable/ic_modify"
                android:padding="@dimen/margin_15dp"
                android:text="@string/hc_modify_transfer"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_transfer_seller"
            style="@style/hc_transfer_bottom_1"
            android:layout_height="@dimen/margin_50dp"
            android:background="@color/GREEN"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_transfer_seller"
                style="@style/hc_transfer_tv_2"
                android:background="@color/GREEN"
                android:padding="@dimen/margin_15dp"
                android:text="转车主"
                android:textColor="@color/self_white"
                android:textSize="@dimen/hc_text_size_middle"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_transfer_other_cost"
            style="@style/hc_transfer_bottom_1"
            android:layout_height="@dimen/margin_50dp"
            android:background="@color/self_blue"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_transfer_other_cost"
                style="@style/hc_transfer_tv_2"
                android:background="@color/self_blue"
                android:padding="@dimen/margin_15dp"
                android:text="其他支出"
                android:textColor="@color/self_white"
                android:textSize="@dimen/hc_text_size_middle"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>