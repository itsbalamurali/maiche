<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <!--我的客户列表Item-->
    <!--<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hc_self_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_item_vehicle_saler_name"
                    style="@style/hc_tv_title"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/margin_15dp"
                    android:text="---"
                    android:textColor="@color/hc_self_black"
                    android:textSize="@dimen/hc_text_size_large"/>

                <TextView
                    android:id="@+id/tv_item_vehicle_revisit_time"
                    style="@style/hc_tv_desc"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/margin_15dp"
                    android:text="----"
                    android:textColor="@color/hc_self_gray"
                    android:textSize="@dimen/hc_text_size_normal"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_vehicle_content"
                style="@style/hc_tv_desc"
                android:lineSpacingExtra="@dimen/margin_8dp"
                android:paddingBottom="@dimen/margin_15dp"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:paddingTop="@dimen/margin_8dp"
                android:text="------"
                android:textSize="@dimen/hc_text_size_normal"/>
        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>