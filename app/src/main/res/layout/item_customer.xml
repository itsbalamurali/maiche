<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/color_white_turn_gray"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_buyer_name"
            style="@style/hc_tv_name"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/margin_15dp"
            android:text="-----"
            android:textSize="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/tv_item_customer_level"
            style="@style/tv_level"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_item_buyer_name"
            android:layout_toRightOf="@+id/tv_item_buyer_name"
            android:text="--"/>

        <TextView
            android:id="@+id/tv_item_today_task"
            style="@style/tv_level"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_toRightOf="@+id/tv_item_customer_level"
            android:paddingLeft="@dimen/margin_3dp"
            android:paddingRight="@dimen/margin_3dp"
            android:text="今日需回访"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_item_buyer_phone"
            style="@style/hc_tv_phone"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_15dp"
            android:text="--------"
            android:textSize="@dimen/margin_16dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_revisit_content"
        style="@style/hc_tv_desc.low"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tv_item_transaction_subscribe_series_label"
        android:lineSpacingExtra="@dimen/margin_5dp"
        android:text="--------------------"/>

    <TextView
        android:id="@+id/tv_item_revisit_time"
        style="@style/hc_tv_desc"
        android:layout_width="match_parent"
        android:text="---------"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:background="@color/hc_self_gray_bg"/>

    <TextView
        android:id="@+id/tv_item_onsite_count"
        style="@style/hc_tv_desc"
        android:layout_width="match_parent"
        android:text="-- · -----"
        android:textColor="@color/hc_self_red"/>
</LinearLayout>