<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/self_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/height_10dp"
    android:paddingTop="@dimen/margin_10dp">

    <include
        style="@style/wh_mw"
        layout="@layout/layout_seller_contact" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_saler"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_saller_name_phone"
            android:textSize="@dimen/margin_12dp" />

        <TextView
            android:id="@+id/tv_saler_name"
            style="@style/hc_tv_desc"
            android:layout_toLeftOf="@+id/tv_saler_phone"
            android:gravity="right"
            android:text="----"
            android:textSize="@dimen/margin_12dp" />

        <TextView
            android:id="@+id/tv_saler_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@drawable/color_transparent_turn_write"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/margin_5dp"
            android:gravity="right"
            android:padding="@dimen/margin_3dp"
            android:text="-----------"
            android:textColor="@color/hc_indicator"
            android:textSize="@dimen/margin_12dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_checker"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_checker_name_phone" />

        <TextView
            android:id="@+id/tv_checker_name"
            style="@style/hc_tv_desc"
            android:layout_toLeftOf="@+id/tv_checker_phone"
            android:gravity="right"
            android:text="----"
            android:textSize="@dimen/margin_12dp" />

        <TextView
            android:id="@+id/tv_checker_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@drawable/color_transparent_turn_write"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/margin_5dp"
            android:gravity="right"
            android:padding="@dimen/margin_3dp"
            android:text="-----------"
            android:textColor="@color/hc_indicator"
            android:textSize="@dimen/margin_12dp" />
    </RelativeLayout>
</LinearLayout>