<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/hc_self_solid"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_5dp">

        <LinearLayout
            style="@style/wh_match"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transaction_seller_price"
                style="@style/hc_tv_price"
                android:text="--.--"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:text="@string/hc_seller_price"/>

        </LinearLayout>

        <View
            style="@style/hc_tv_price_sep"
            />

        <LinearLayout
            style="@style/wh_match"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transaction_cheap_price"
                style="@style/hc_tv_price"
                android:text="--.--"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:text="@string/hc_cheap_price"/>

        </LinearLayout>

        <View
            style="@style/hc_tv_price_sep"
            />

        <LinearLayout
            style="@style/wh_match"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transaction_eval_price"
                style="@style/hc_tv_price"
                android:text="--.--"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="@string/hc_eval_price"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/hc_self_gray_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_5dp">

        <LinearLayout
            style="@style/wh_match"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transaction_eval_price_21"
                style="@style/hc_tv_price"
                android:text="--.--"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:text="@string/hc_eval_price_21"/>
        </LinearLayout>

        <View
            style="@style/hc_tv_price_sep"
            />

        <LinearLayout
            style="@style/wh_match"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transaction_dealer_price"
                style="@style/hc_tv_price"
                android:text="--.--"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:text="@string/hc_eval_price_dealer"/>

        </LinearLayout>

        <View
            style="@style/hc_tv_price_sep"
            />

        <LinearLayout
            style="@style/wh_match"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>