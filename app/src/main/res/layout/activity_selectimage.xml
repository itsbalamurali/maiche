<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hc_self_black"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_contract_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"/>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="@dimen/height_35dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_weight="1"
        android:background="@drawable/pay_selector_red_turn_deep"
        android:text="0/8"
        android:textColor="@color/white"/>

</LinearLayout>