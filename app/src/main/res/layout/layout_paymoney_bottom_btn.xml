<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_50dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/hc_self_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/p_service_pay"
            android:textColor="@color/hc_self_red"
            android:textSize="@dimen/hc_text_size_normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/height_2dp"
            android:text="ï¿¥"
            android:textColor="@color/hc_self_red"
            android:textSize="@dimen/hc_text_size_normal"
            />

        <TextView
            android:id="@+id/tv_layout_transfer_final_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/hc_self_red"
            android:textSize="@dimen/hc_text_size_xlarge"
            />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/hc_self_gray_line"/>


    <RelativeLayout
        android:id="@+id/btn_transaction_prepay_pay"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/hc_prepay_bottom_btn_yellow">

        <TextView
            android:id="@+id/tv_transaction_prepay_pay"
            style="@style/hc_transfer_tv_2"
            android:layout_centerInParent="true"
            android:background="#0000"
            android:drawableLeft="@drawable/ic_transaction_prepay"
            android:padding="@dimen/margin_15dp"
            android:text="@string/hc_transaction_prepay_pay"
            />

    </RelativeLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/hc_self_gray_line"/>


    <RelativeLayout
        android:id="@+id/btn_transaction_prepay_commit"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/hc_prepay_bottom_btn_grey">

        <TextView
            android:id="@+id/tv_transaction_prepay_commit"
            style="@style/hc_transfer_tv_2"
            android:layout_centerInParent="true"
            android:background="#0000"
            android:drawableLeft="@drawable/ic_hc_lock"
            android:padding="@dimen/margin_15dp"
            android:text="@string/hc_transaction_prepay_commit"
            />

    </RelativeLayout>
</LinearLayout>