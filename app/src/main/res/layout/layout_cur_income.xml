<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_trans_fee"
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_10dp"
                android:fontFamily="monospace"
                android:text="-------"
                android:textColor="@color/self_black"
                android:textSize="@dimen/margin_20dp"
                android:textStyle="bold"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="服务费基数"
                android:textSize="@dimen/height_10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fin_loan"
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_10dp"
                android:fontFamily="monospace"
                android:text="-------"
                android:textColor="@color/self_black"
                android:textSize="@dimen/margin_20dp"
                android:textStyle="bold"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="贷款基数"
                android:textSize="@dimen/height_10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fin_insurance"
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_10dp"
                android:fontFamily="monospace"
                android:text="-------"
                android:textColor="@color/self_black"
                android:textSize="@dimen/margin_20dp"
                android:textStyle="bold"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="保险基数"
                android:textSize="@dimen/height_10dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_oil_fee"
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_10dp"
                android:fontFamily="monospace"
                android:text="-------"
                android:textColor="@color/self_black"
                android:textSize="@dimen/margin_20dp"
                android:textStyle="bold"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="油补"
                android:textSize="@dimen/height_10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bonus"
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_10dp"
                android:fontFamily="monospace"
                android:text="-------"
                android:textColor="@color/self_black"
                android:textSize="@dimen/margin_20dp"
                android:textStyle="bold"/>

            <TextView
                style="@style/hc_tv_price_desc"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="奖金"
                android:textSize="@dimen/height_10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>