<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/wh_mw"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/hc_titlebar_black"
              android:orientation="vertical">

    <LinearLayout
        style="@style/wh_wrap"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_transaction_arrival_label"
            style="@style/hc_tv_title"
            android:paddingBottom="@dimen/margin_0dp"
            android:paddingLeft="@dimen/margin_0dp"
            android:paddingRight="@dimen/height_2dp"
            android:paddingTop="@dimen/margin_0dp"
            android:text="@string/hc_customer_arrival"
            android:textSize="@dimen/margin_14dp"/>

        <TextView
            android:id="@+id/tv_arrival"
            style="@style/hc_tv_title"
            android:paddingBottom="@dimen/margin_0dp"
            android:paddingLeft="@dimen/height_2dp"
            android:paddingRight="@dimen/margin_0dp"
            android:paddingTop="@dimen/margin_0dp"
            android:text="xxxx-xx-xx xx:xx"
            android:textSize="@dimen/margin_14dp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/wh_mw"
        android:layout_marginTop="@dimen/height_10dp"
        android:layout_height="@dimen/margin_60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/margin_21dp"
            android:paddingTop="@dimen/margin_21dp"
            android:src="@drawable/ic_call"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="23dp"
            android:background="@color/hc_self_gray_bg"/>

        <ImageView
            android:id="@+id/iv_editeinfo"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/margin_21dp"
            android:paddingTop="@dimen/margin_21dp"
            android:src="@drawable/ic_subscribe"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="23dp"
            android:background="@color/hc_self_gray_bg"/>

        <ImageView
            android:id="@+id/iv_resurrection"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/margin_21dp"
            android:paddingTop="@dimen/margin_21dp"
            android:src="@drawable/ic_resurrection"/>
    </LinearLayout>
</LinearLayout>