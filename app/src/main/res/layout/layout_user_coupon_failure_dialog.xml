<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_coupons_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/margin_25dp">

    <TextView
        android:id="@+id/et_user_coupon_title"
        style="@style/HCTheme.TextMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:drawablePadding="@dimen/margin_15dp"
        android:drawableTop="@drawable/ic_hc_user_coupon_exchange_failure"
        android:text="@string/hc_transfer_coupon_code_erro"
        android:textSize="@dimen/hc_text_size_normal"/>

    <Button
        android:id="@+id/btn_user_coupon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_30dp"
        android:background="#0000"
        android:paddingLeft="@dimen/margin_20dp"
        android:paddingRight="@dimen/margin_20dp"
        android:paddingTop="@dimen/margin_15dp"
        android:text="@string/common_title_back"
        android:textColor="@color/hc_indicator"
        android:textSize="@dimen/hc_text_size_middle"/>


</LinearLayout>